<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fundoTelaLoginColor"
        tools:context=".MainActivity">

    <EditText

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:hint="Email"
            android:paddingLeft="8dp"
            android:background="@drawable/edit_text_arredondado"
            android:id="@+id/editTextEmail" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:paddingLeft="8dp"
            android:hint="Senha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/edit_text_arredondado"
            android:ems="10"
            android:id="@+id/editTextSenha" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextEmail" app:layout_constraintStart_toStartOf="@+id/editTextEmail"
            app:layout_constraintEnd_toEndOf="@+id/editTextEmail"
    />
    <Button
            android:text="Login"

            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_arredondado"
            android:id="@+id/buttonLogin" app:layout_constraintEnd_toEndOf="@+id/editTextSenha"
            app:layout_constraintStart_toStartOf="@+id/editTextSenha"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_bias="0.42" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSenha"/>
    <TextView
            android:textStyle="bold"
            android:text="Criar Conta Freedom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewCriaConta"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/buttonLogin"
            app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
            app:layout_constraintStart_toStartOf="@+id/buttonLogin"
    />

</android.support.constraint.ConstraintLayout>